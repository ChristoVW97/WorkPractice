@model List<Employee>

    <div class="container">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h1 class="text-default">
                    Employee List
                </h1>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Employee" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>  Add New Employee
            </a>
            </div>
        </div>
    </div>
<table class="table table-striped table-border">
    <thead>
        <tr>
            <th class="text-info">
                Employee Name
            </th>
            <th class="text-info">
                Display Order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.OrderBy(u=>u.DisplayOrder))
        {
            <tr class="table-default">

                <td>@obj.Name</td>
                <td>
                    @obj.DisplayOrder
                </td>
            </tr>
        }
    </tbody>
</table>